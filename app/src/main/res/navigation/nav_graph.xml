<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/loginFragment">

    <fragment
            android:id="@+id/feedFragment"
            android:name="com.drip.dripapplication.presentation.feed.FeedFragment"
            android:label="feed_fragment"
            tools:layout="@layout/feed_fragment" />
    <fragment
            android:id="@+id/likesFragment"
            android:name="com.drip.dripapplication.presentation.likes.LikesFragment"
            android:label="likes_fragment"
            tools:layout="@layout/likes_fragment" />
    <fragment
            android:id="@+id/messagesFragment"
            android:name="com.drip.dripapplication.presentation.chats.MessagesFragment"
            android:label="messages_fragment"
            tools:layout="@layout/messages_fragment" />
    <fragment
            android:id="@+id/profileFragment"
            android:name="com.drip.dripapplication.presentation.profile.ProfileFragment"
            android:label="profile_fragment"
            tools:layout="@layout/profile_fragment" >
        <action
                android:id="@+id/action_profileFragment_to_profileEditFragment"
                app:destination="@id/profileEditFragment" />
        <action
                android:id="@+id/action_profileFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
    </fragment>
    <fragment
            android:id="@+id/profileEditFragment"
            android:name="com.drip.dripapplication.presentation.profileEdit.ProfileEditFragment"
            android:label="profileEdit_fragment"
            tools:layout="@layout/profile_edit_fragment" />
    <fragment
            android:id="@+id/loginFragment"
            android:name="com.drip.dripapplication.presentation.login.LoginFragment"
            android:label="login_fragment"
            tools:layout="@layout/login_fragment" >
        <action
                android:id="@+id/action_loginFragment_to_signupFragment"
                app:destination="@id/signupFragment" />
        <action
                android:id="@+id/action_loginFragment_to_mainFragment"
                app:destination="@id/feedFragment"
                app:popUpToInclusive="true"
                app:popUpTo="@id/nav_graph" />
    </fragment>
    <fragment
            android:id="@+id/signupFragment"
            android:name="com.drip.dripapplication.presentation.signup.SignupFragment"
            android:label="signup_fragment"
            tools:layout="@layout/signup_fragment" >
        <action
                android:id="@+id/action_signupFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
        <action
                android:id="@+id/action_signupFragment_to_profileEditFragment"
                app:destination="@id/profileEditFragment" />
    </fragment>

</navigation>