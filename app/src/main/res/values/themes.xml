<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DripApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="SettingsInput">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="android:layout_marginTop">@dimen/lg</item>
        <item name="android:paddingStart">@dimen/md</item>
        <item name="android:paddingEnd">@dimen/md</item>
    </style>

    <style name="SettingsInputHint">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/xs</item>
        <item name="android:paddingStart">@dimen/md</item>
        <item name="android:paddingEnd">@dimen/md</item>
        <item name="android:textSize">@dimen/fs4</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SettingsFieldHeaders">
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/fs3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tag">
        <item name="android:background">@drawable/tag_background</item>
        <item name="android:textColor">@color/tag_radiobutton</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:textSize">@dimen/fs3</item>
        <item name="android:paddingStart">@dimen/md</item>
        <item name="android:paddingEnd">@dimen/md</item>
    </style>

    <style name="SubmitButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/fs3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>

