<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DripApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_dim</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Widget.Drip.Button</item>

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Splash screen -->
    <style name="App.Theme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gradient_first</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_drip_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.DripApplication</item>
    </style>

    <!-- Bottom nav -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/purple_500</item>
    </style>

    <!-- Drip buttons -->
    <style name="Widget.Drip.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/selector_text_buttons</item>
        <item name="backgroundTint">@color/selector_buttons_white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Drip.Buttons</item>
        <item name="android:textAppearance">@style/TextAppearance.Drip.Buttons</item>
    </style>

    <style name="ShapeAppearance.Drip.Buttons" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35%</item>
    </style>

    <style name="TextAppearance.Drip.Buttons" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/futura_bold</item>
        <item name="android:fontFamily">@font/futura_bold</item>
    </style>

    <style name="SettingsInput">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="android:layout_marginTop">@dimen/lg</item>
        <item name="android:paddingStart">@dimen/md</item>
        <item name="android:paddingEnd">@dimen/md</item>
    </style>

    <style name="SettingsInputHint">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/xs</item>
        <item name="android:paddingStart">@dimen/md</item>
        <item name="android:paddingEnd">@dimen/md</item>
        <item name="android:textSize">@dimen/fs4</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SettingsFieldHeaders">
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/fs3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tag">
        <item name="android:background">@drawable/tag_background</item>
        <item name="android:textColor">@color/tag_radiobutton</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:textSize">@dimen/fs3</item>
        <item name="android:paddingStart">@dimen/md</item>
        <item name="android:paddingEnd">@dimen/md</item>
    </style>

    <style name="SubmitButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_height">40dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/fs3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>

